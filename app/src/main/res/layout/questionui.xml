<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="396dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/analytics" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="224dp"
        android:layout_height="128dp"

        android:layout_marginStart="64dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton">

        <RadioButton
            android:id="@+id/replyquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reply to Questions"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="161dp" />

        <RadioButton
            android:id="@+id/myquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Posted Questions"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="161dp" />

        <RadioButton
            android:id="@+id/questionpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Question"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="161dp" />

        <RadioButton
            android:id="@+id/allquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Posted Questions"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="161dp" />


    </RadioGroup>

<include layout="@layout/popup"></include>

</androidx.constraintlayout.widget.ConstraintLayout>